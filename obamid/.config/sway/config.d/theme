# Setting gaps
gaps inner 5
gaps outer 6

# Hide titlebar on windows
default_border pixel 1

# Smart borders
smart_borders on

# Apply wallpaper
exec ~/.azotebg

# Font matching with waybar
font pango:FiraSans Medium 10.5

# Set cursor theme
# seat seat0 xcursor_theme <INSERT_THEME_HERE> 16
# themes install to /usr/share/icons/
# ls there to find the names.

