# Setting gaps
gaps inner 5
gaps outer 6

# Hide titlebar on windows
default_border pixel 1

# Smart borders
smart_borders on

# Apply wallpaper
exec ~/.azotebg

# Font matching with waybar
font pango:Lato Medium 10

# Set cursor theme
seat seat0 xcursor_theme Breeze_Snow 24
# themes install to /usr/share/icons/
# ls there to find the names.

